{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "skipLibCheck": true,

    "strict": false,
    "checkJs": false,

    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES2017",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["."],
  "exclude": ["node_modules"]
}
