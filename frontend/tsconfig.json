{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,

    "esModuleInterop": true,
    "module": "esnext",
    "target": "ES2017",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",

    "types": []
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", ".next"]
}
